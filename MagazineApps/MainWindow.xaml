<Window x:Class="MagazineApps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagazineApps"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Name="TB_name" Width="300" Text="Здравствуйте, Гость!" Height="25" HorizontalAlignment="Left" Margin="10 0 0 0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="Btn_zakaz" Click="Btn_zakaz_Click"  Width="150" Height="25" Content="Просмотр заказов" HorizontalAlignment="Right" Margin="0 0 10 0"/>
                <Button Name="Btn_add" Click="Btn_add_Click" Width="150" Height="25" Content="Добавить товар" HorizontalAlignment="Right" Margin="0 0 10 0"/>
                <Button Name="Btn_vhod" Click="Btn_vhod_Click" Width="100" Height="25" Content="Войти" HorizontalAlignment="Right" Margin="0 0 10 0"/>
            </StackPanel>
        </Grid>

        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>

    </Grid>
</Window>
