<Window x:Class="MagazineApps.Win_.AutWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagazineApps.Win_"
        mc:Ignorable="d"
        Title="Авторизация" Height="250" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин"/>
            <TextBox Name="TB_log" Width="200" Height="30" Margin="0 10 0 0"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox Name="TB_pas" Width="200" Height="30" Margin="0 10 0 0"/>
            <Button Name="Btn_vhod" Click="Btn_vhod_Click" Content="Войти" Height="30" Margin="0 10 0 0"/>
        </StackPanel>
        
    </Grid>
</Window>
