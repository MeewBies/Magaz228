<Page x:Class="MagazineApps.Page_.PageAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MagazineApps.Page_"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="900"
      Title="PageAdd">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Наименование"/>
            <TextBox Name="TB_name"/>
            <TextBlock Text="Цена" Margin="0 20 0 0"/>
            <TextBox Name="TB_price"/>
            <TextBlock Text="Количество" Margin="0 20 0 0"/>
            <TextBox Name="TB_kolvo"/>
            <TextBlock Text="Производитель" Margin="0 20 0 0"/>
            <TextBox Name="TB_proiz"/>
            <TextBlock Text="Тип" Margin="0 20 0 0"/>
            <TextBox Name="TB_tip"/>
            <Button Name="Btn_add" Click="Btn_add_Click" Content="Добавить товар" Height="30" Margin="0 20 0 0"/>
            <Button Name="Btn_exit" Click="Btn_exit_Click"  Content="Вернуться на главную страницу" Margin="0 100 0 0"/>
        </StackPanel>
    </Grid>
</Page>
